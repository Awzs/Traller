# MongoDB configuration
MONGODB_URI=mongodb://localhost:27017/traller

# Perplexity API configuration (主要联网搜索服务)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_API_URL=https://api.perplexity.ai

# Tavily API configuration (备用联网搜索服务)
TAVILY_API_KEY=your_tavily_api_key_here
TAVILY_API_URL=https://api.tavily.com

# OpenRouter API configuration (大模型整合服务)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_URL=https://openrouter.ai/api/v1

# Server configuration
PORT=8080
NODE_ENV=production

# CORS configuration (生产环境)
FRONTEND_URL=https://your-frontend-url.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Vercel specific environment variables (if deploying to Vercel)
VERCEL_URL=your_vercel_deployment_url
VERCEL_ENV=production

# Google Cloud specific environment variables (if deploying to GCP)
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=asia-east1
